@model PurchaseInvoiceDto

@{
    ViewData["Title"] = "Satın Alma Faturası Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <i class="fas fa-trash-alt text-danger"></i>
                    Satın Alma Faturası Sil
                </h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "PurchaseInvoice")">Satın Alma Faturaları</a></li>
                        <li class="breadcrumb-item active">Sil</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        Dikkat! Satın Alma Faturası Silme İşlemi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i>
                            Önemli Uyarı!
                        </h6>
                        <p class="mb-0">
                            Bu satın alma faturasını silmek istediğinizden emin misiniz? 
                            <strong>Bu işlem geri alınamaz!</strong>
                        </p>
                    </div>

                    @if (Model != null)
                    {
                        <!-- Fatura Özet Bilgileri -->
                        <div class="card bg-light mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Silinecek Fatura Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-borderless table-sm">
                                            <tr>
                                                <th width="140">Fatura No:</th>
                                                <td><strong class="text-primary">@Model.InvoiceNo</strong></td>
                                            </tr>
                                            <tr>
                                                <th>Fatura Tarihi:</th>
                                                <td>@Model.InvoiceDate.ToString("dd.MM.yyyy")</td>
                                            </tr>
                                            <tr>
                                                <th>Tedarikçi:</th>
                                                <td><strong>@Model.CariCode - @Model.CariName</strong></td>
                                            </tr>
                                            <tr>
                                                <th>Depo:</th>
                                                <td>@Model.WarehouseName</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <table class="table table-borderless table-sm">
                                            <tr>
                                                <th width="140">Durum:</th>
                                                <td>
                                                    <span class="badge @(Model.Status == "APPROVED" ? "bg-success" : Model.Status == "CANCELLED" ? "bg-danger" : "bg-warning")">
                                                        @Model.Status
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Ara Toplam:</th>
                                                <td>@Model.SubTotal.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <th>KDV Tutarı:</th>
                                                <td>@Model.VatAmount.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <th><strong>Genel Toplam:</strong></th>
                                                <td><strong class="text-danger">@Model.Total.ToString("C")</strong></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Fatura Kalemleri -->
                        @if (Model.Details != null && Model.Details.Any())
                        {
                            <div class="card bg-light mb-4">
                                <div class="card-header">
                                    <h6 class="mb-0">Fatura Kalemleri (@Model.Details.Count adet)</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Ürün</th>
                                                    <th class="text-center">Miktar</th>
                                                    <th class="text-end">Birim Fiyat</th>
                                                    <th class="text-end">Net Toplam</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var detail in Model.Details)
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@detail.ProductCode</strong><br>
                                                            <small class="text-muted">@detail.ProductName</small>
                                                        </td>
                                                        <td class="text-center">
                                                            @detail.Quantity.ToString("N2")
                                                        </td>
                                                        <td class="text-end">
                                                            @detail.UnitPrice.ToString("C")
                                                        </td>
                                                        <td class="text-end">
                                                            <strong>@detail.NetTotal.ToString("C")</strong>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Silme İşlemi Uyarıları -->
                        <div class="card border-warning mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    Silme İşlemi Etkileri
                                </h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas fa-arrow-right text-danger"></i>
                                        <strong>Fatura tamamen silinecektir</strong> ve geri getirilemez.
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-arrow-right text-danger"></i>
                                        <strong>Stok hareketleri etkilenebilir</strong> - Stok miktarları tekrar hesaplanacak.
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-arrow-right text-danger"></i>
                                        <strong>Tedarikçi hesap bakiyesi güncellenecektir</strong> - Tedarikçi bakiyesinden düşülecek.
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-arrow-right text-danger"></i>
                                        <strong>Raporlar etkilenecektir</strong> - Satın alma raporları ve analizler güncellenecek.
                                    </li>
                                    @if (Model.Status == "APPROVED")
                                    {
                                        <li class="mb-2">
                                            <i class="fas fa-arrow-right text-warning"></i>
                                            <strong>Onaylanmış fatura silinecek</strong> - Mali kayıtlar etkilenecek.
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <!-- Silme Onay Formu -->
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="InvoiceID" />
                            
                            <div class="card border-danger">
                                <div class="card-body">
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                        <label class="form-check-label" for="confirmDelete">
                                            <strong>Yukarıdaki uyarıları okudum ve anladım. Bu faturayı silmek istediğimi onaylıyorum.</strong>
                                        </label>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left"></i> Geri
                                        </a>
                                        
                                        <div>
                                            <a href="@Url.Action("Details", new { id = Model.InvoiceID })" class="btn btn-info me-2">
                                                <i class="fas fa-eye"></i> Detayları Gör
                                            </a>
                                            <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                                <i class="fas fa-trash-alt"></i> Faturayı Sil
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Satın alma faturası bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const confirmCheckbox = document.getElementById('confirmDelete');
    const deleteButton = document.getElementById('deleteButton');
    
    if (confirmCheckbox && deleteButton) {
        confirmCheckbox.addEventListener('change', function() {
            deleteButton.disabled = !this.checked;
        });
    }
    
    // Form submit confirmation
    const form = document.querySelector('form[asp-action="Delete"]');
    if (form) {
        form.addEventListener('submit', function(e) {
            if (!confirm('Bu faturayı silmek istediğinizden kesinlikle emin misiniz?\n\nBu işlem GERİ ALINAMAZ!')) {
                e.preventDefault();
            }
        });
    }
});
</script>

<style>
.card.border-danger {
    border-width: 2px;
}

.card.border-warning {
    border-width: 1px;
}

.alert-danger {
    border-left: 4px solid #dc3545;
}

.list-unstyled li {
    padding-left: 20px;
}
</style> 