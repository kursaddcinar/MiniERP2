@model CreateCariAccountDto

@{
    ViewData["Title"] = "Yeni Cari Hesap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">
                    <i class="fas fa-plus"></i>
                    Yeni Cari Hesap
                </h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "CariAccount")">Cari Hesaplar</a></li>
                        <li class="breadcrumb-item active">Yeni Cari</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Cari Hesap Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CariCode" class="form-label"></label>
                                    <input asp-for="CariCode" class="form-control" placeholder="Cari kodu giriniz" />
                                    <span asp-validation-for="CariCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CariName" class="form-label"></label>
                                    <input asp-for="CariName" class="form-control" placeholder="Cari adı giriniz" />
                                    <span asp-validation-for="CariName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContactPerson" class="form-label"></label>
                                    <input asp-for="ContactPerson" class="form-control" placeholder="İletişim kişisi adı" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Telefon numarası" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresi" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TypeID" class="form-label"></label>
                                    <select asp-for="TypeID" class="form-select">
                                        <option value="">Cari tipi seçiniz...</option>
                                        @if (ViewBag.CariTypes != null)
                                        {
                                            @foreach (var type in (List<CariTypeDto>)ViewBag.CariTypes)
                                            {
                                                <option value="@type.TypeID">@type.TypeName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="TypeID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaxNumber" class="form-label"></label>
                                    <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numarası" />
                                    <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TaxOffice" class="form-label"></label>
                                    <input asp-for="TaxOffice" class="form-control" placeholder="Vergi dairesi" />
                                    <span asp-validation-for="TaxOffice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CreditLimit" class="form-label"></label>
                                    <input asp-for="CreditLimit" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    <span asp-validation-for="CreditLimit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label"></label>
                                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Adres bilgisi"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Geri
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Kaydet
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
