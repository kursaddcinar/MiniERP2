@model MiniERP.Web.Models.UpdateProductDto
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="h3 mb-0">Ürün Düzenle</h1>
        <p class="text-muted">Ürün bilgilerini düzenleme formu</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ProductCode" class="form-label required"></label>
                                <input asp-for="ProductCode" class="form-control" placeholder="Ürün kodunu girin" readonly>
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                                <small class="form-text text-muted">Ürün kodu değiştirilemez</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ProductName" class="form-label required"></label>
                                <input asp-for="ProductName" class="form-control" placeholder="Ürün adını girin">
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün açıklaması (isteğe bağlı)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryID" class="form-label required"></label>
                                <select asp-for="CategoryID" class="form-select">
                                    <option value="">Kategori seçin</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        @foreach (var category in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Categories)
                                        {
                                            <option value="@category.Value" selected="@(category.Value == Model.CategoryID.ToString())">@category.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UnitID" class="form-label required"></label>
                                <select asp-for="UnitID" class="form-select">
                                    <option value="">Birim seçin</option>
                                    @if (ViewBag.Units != null)
                                    {
                                        @foreach (var unit in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Units)
                                        {
                                            <option value="@unit.Value" selected="@(unit.Value == Model.UnitID.ToString())">@unit.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="UnitID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PurchasePrice" class="form-label required"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" placeholder="0.00">
                                </div>
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="SalePrice" class="form-label required"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="SalePrice" class="form-control" type="number" step="0.01" placeholder="0.00">
                                </div>
                                <span asp-validation-for="SalePrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="VatRate" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="VatRate" class="form-control" type="number" step="0.01">
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="VatRate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MinStockLevel" class="form-label"></label>
                                <input asp-for="MinStockLevel" class="form-control" type="number" step="0.01" placeholder="0">
                                <span asp-validation-for="MinStockLevel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive">
                            <label class="form-check-label" for="IsActive">
                                Aktif
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Yardım</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        <strong>Ürün Kodu:</strong> Benzersiz olmalıdır
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        <strong>KDV Oranı:</strong> Varsayılan %18
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        <strong>Min. Stok:</strong> Kritik stok seviyesi
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-toggle-on text-success me-2"></i>
                        <strong>Aktif:</strong> Ürünün kullanımda olduğunu belirtir
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .required:after {
        content: " *";
        color: red;
    }
</style> 