@model MiniERP.Web.Models.LoginDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                <h3 class="card-title">MiniERP</h3>
                <p class="text-muted">Lütfen giriş yapın</p>
            </div>

            <form asp-controller="Auth" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı girin" required />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Giriş Yap
                    </button>
                </div>

                @if (ViewData["ReturnUrl"] != null)
                {
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                }
            </form>

            <div class="text-center mt-4">
                <div class="mt-3">
                    <form asp-controller="Auth" asp-action="CreateTestUsers" method="post" class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-users me-2"></i>
                            Test Kullanıcılarını Oluştur
                        </button>
                    </form>
                </div>
                
                <div class="mt-3">
                    <h6 class="mb-2">Hızlı Test Giriş:</h6>
                    <div class="row g-1">
                        <div class="col-6">
                            <form asp-controller="Auth" asp-action="TestAuth" method="post" class="d-inline">
                                <input type="hidden" name="username" value="admin" />
                                <input type="hidden" name="password" value="admin" />
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="fas fa-crown me-1"></i>Admin
                                </button>
                            </form>
                        </div>
                        <div class="col-6">
                            <form asp-controller="Auth" asp-action="TestAuth" method="post" class="d-inline">
                                <input type="hidden" name="username" value="manager" />
                                <input type="hidden" name="password" value="manager" />
                                <button type="submit" class="btn btn-sm btn-warning w-100">
                                    <i class="fas fa-user-tie me-1"></i>Manager
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="row g-1 mt-1">
                        <div class="col-6">
                            <form asp-controller="Auth" asp-action="TestAuth" method="post" class="d-inline">
                                <input type="hidden" name="username" value="employee" />
                                <input type="hidden" name="password" value="employee" />
                                <button type="submit" class="btn btn-sm btn-info w-100">
                                    <i class="fas fa-user me-1"></i>Employee
                                </button>
                            </form>
                        </div>
                        <div class="col-6">
                            <form asp-controller="Auth" asp-action="TestAuth" method="post" class="d-inline">
                                <input type="hidden" name="username" value="finance" />
                                <input type="hidden" name="password" value="finance" />
                                <button type="submit" class="btn btn-sm btn-success w-100">
                                    <i class="fas fa-calculator me-1"></i>Finance
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="mt-2">
                    <small class="text-muted">
                        Test kullanıcıları: admin/admin, manager/manager, employee/employee, finance/finance
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 