@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5 text-center">
            <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
            <h3 class="card-title text-danger">Erişim Engellendi</h3>
            <p class="text-muted mb-4">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>
                    Ana Sayfa
                </a>
                <button onclick="history.back()" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Geri Dön
                </button>
            </div>
        </div>
    </div>
</div> 